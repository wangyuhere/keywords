<h1>Articles</h1>
<div class="row">
  <div class="col-md-8">
    <span class="pull-left">
      <%= paginate @articles %>
    </span>
    <span class="pull-right pagination">
      <%= page_entries_info @articles %>
    </span>
  </div>
</div>
<div class="row">
  <div class="col-md-8">
    <ul class="list-group">
      <% @articles.each do |article| %>
        <li class="list-group-item">
          <span class="badge"><%= article.source_name %></span>
          <%= link_to article.title, article_path(article) %>
          <small><%= article.published_at %></small>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<div class="row">
  <div class="col-md-8">
    <span class="pull-left">
      <%= paginate @articles %>
    </span>
    <span class="pull-right pagination">
      <%= page_entries_info @articles %>
    </span>
  </div>
</div>
